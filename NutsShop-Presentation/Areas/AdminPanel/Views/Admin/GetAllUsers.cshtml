@using Application.Dtos.UserLogInDTO
@model List<UserAdminPanelDTO>;


@{
    Layout = "_AdminLayout";
}


<html lang="fa">


@{
    Layout = "_AdminLayout";
}


<html lang="fa">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جدول محصولات</title>
    <link rel="stylesheet" href="style.css">

</head>


<style>




    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    th, td {
        padding: 15px;
        text-align: center;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    img {
        max-width: 100px;
        height: auto;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }



    .btn {
        height: 40px;
        width: 40%;
    }

    .Addbtn {
        margin: 30px;
        height: 40px;
        width: 40%;
    }

</style>






<body>


    <h1>لیست کاربران</h1>
  

    <div class="container">


        <table>

            <tr>

                <th>نام کاربری</th>
                <th>شماره موبایل</th>
                <th>تاریخ عضویت</th>               
                <th></th>

            </tr>

            @if (Model != null)
            {

                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.UserName</td>
                        <td>@item.Phone</td>
                        <td>@item.CreateDate</td>
                       



                        <td>
                            <a asp-area="AdminPanel" asp-controller="Admin" asp-action="EditUser" asp-route-UserId="@item.Id"><button class="btn">ویرایش</button></a>
                            <a asp-area="AdminPanel" asp-controller="Admin" asp-action="RemoveUser" asp-route-UserId="@item.Id"><button class="btn">حذف</button></a>
                        </td>

                    </tr>
                }



            }






        </table>

    </div>

</body>

</html>


