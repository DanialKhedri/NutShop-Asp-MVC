@using Application.Dtos.CategoryDTO
@model CategoryDTO;

@{
    Layout = "_AdminLayout";
}



<head>

    <noscript>

        <style>

            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }

        </style>


    </noscript>

</head>

<style>

    .maincontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: gray;
        padding: 1px;
    }

    .inputcontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .img {
        margin: 20px;
        width: 300px;
        height: 300px;
    }

    .Roles {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .btn {
        margin: 20px;
    }


    .title {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<body>

    <div class="title">
        <h1>اضافه کردن محصول</h1>
    </div>

    <div class="maincontainer">


        <form class="maincontainer" method="post" asp-area="AdminPanel" asp-controller="Admin" asp-action="AddCategory" enctype="multipart/form-data">

            <div class="row">

                <!--Category Title-->

                <div class="inputcontainer">
                    <label>Category Title</label>
                    <input class="form-control" style="margin: 10px" type="text"
                           asp-for="@Model.CategoryTitle" placeholder="Category Title" required="">
                </div>


                <!--Category Unique Name-->

                <div class="inputcontainer">

                    <label>Category Unique Name</label>
                    <textarea class="form-control" style="margin: 10px" type="text" asp-for="@Model.CategoryUniqueName" placeholder="Category Unique Name" required=""></textarea>

                </div>

                <br>

     


            </div>


            <!--Image-->

            <div class="inputcontainer">


                <img class="img" type="file" id="image" name="image">


                <input id="UserAvatarIFromFIle" type="file" asp-for="@Model.ImageIFormFile"></>

            </div>

       

            <div>
                <button class="btn" type="submit">Edit information</button>
            </div>

        </form>

    </div>

    <hr style="height: 5px; color: black;"></hr>

</body>

<script>

    const fileInput = document.getElementById('UserAvatarIFromFIle');

    const image = document.getElementById('image');

    fileInput.addEventListener('change', function () {

        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            image.src = e.target.result;
        }

        reader.readAsDataURL(file);
    });

</script>
