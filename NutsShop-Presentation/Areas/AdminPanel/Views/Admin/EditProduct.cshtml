@using NutsShop_Presentation.Areas.AdminPanel.ViewModels
@model EditProductViewModel;

@{
    Layout = "_AdminLayout";
}



<head>

    <noscript>

        <style>

            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }

        </style>


    </noscript>

</head>



<style>

    .maincontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: gray;
        padding: 1px;
    }

    .inputcontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .img {
        margin: 20px;
        width: 300px;
        height: 300px;
    }

    .Roles {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .btn {
        margin: 20px;
    }


    .title {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<body>

    <div class="title">
        <h1>ویرایش محصول</h1>
    </div>

    <div class="maincontainer">


        <form class="maincontainer" method="post" asp-area="AdminPanel" asp-controller="Admin" asp-action="EditProduct" enctype="multipart/form-data">

            <div class="row">

                <div class="inputcontainer">
                    <label>Id</label>
                    <input readonly class="form-control" style="margin: 10px" type="text"
                           asp-for="@Model.productDTO.Id" placeholder="Product Name" required="">
                </div>


                <!--Product Name-->

                <div class="inputcontainer">
                    <label>Product Name</label>
                    <input class="form-control" style="margin: 10px" type="text"
                           asp-for="@Model.productDTO.ProductName" placeholder="Product Name" required="">
                </div>


                <!--Description-->

                <div class="inputcontainer">

                    <label>Description</label>
                    <textarea class="form-control" style="margin: 10px" type="text" asp-for="@Model.productDTO.Description" placeholder="Description" required=""></textarea>

                </div>

                <br>

                <!--Price-->

                <div class="inputcontainer">

                    <label>Price</label>
                    <input class="form-control" style="margin: 10px" type="text" asp-for="@Model.productDTO.Price" placeholder="Your Name" required="">

                </div>


            </div>


            <!--Image-->

            <div class="inputcontainer">

                @if (Model.productDTO.Image != null)
                {

                    <img src="~/Images/Products/@Model.productDTO.Image" class="img" type="file" id="image" name="image">
                }

                else
                {

                    <img class="img" type="file" id="image" name="image">

                }



                <input id="UserAvatarIFromFIle" type="file" asp-for="@Model.productDTO.ImageIformFile"></>

            </div>

            <div class="Roles">

                @if (Model.categories != null)
                {
                    @foreach (var item in Model.categories)
                    {

                        <label>@item.CategoryTitle</label>
                        <input type="checkbox" value="@item.Id" name="SelectedCategories" />
                        <br></br>

                    }
                }
            </div>

            <div>
                <button class="btn" type="submit">Edit information</button>
            </div>

        </form>

    </div>

    <hr style="height: 5px; color: black;"></hr>

</body>

<script>

    const fileInput = document.getElementById('UserAvatarIFromFIle');

    const image = document.getElementById('image');

    fileInput.addEventListener('change', function () {

        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            image.src = e.target.result;
        }

        reader.readAsDataURL(file);
    });

</script>

