@using NutsShop_Presentation.Areas.AdminPanel.ViewModels
@model EditProductViewModel;

@{
    Layout = "_AdminLayout";
}



<head>

    <noscript>

        <style>

            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }

        </style>


    </noscript>

</head>



<body>

    <div class="InputContainer" style="display: flex; flex-direction: column;align-content: center; justify-content: center; align-items: center;">

        <div style="display:flex; align-items: center; margin-top: 20px;">
        </div>



        <div>

            <div class="contant-section px-3 px-lg-4 pb-4" id="contact">

                <form method="post" asp-area="AdminPanel" asp-controller="Admin" asp-action="EditProduct" enctype="multipart/form-data">

                    <div class="row">

                        <div class="col-6">
                            <label>Id</label>
                            <input readonly class="form-control" style="margin: 10px" type="text"
                                   asp-for="@Model.productDTO.Id" placeholder="Product Name" required="">
                        </div>


                        <!--Product Name-->

                        <div class="col-6">
                            <label>Product Name</label>
                            <input class="form-control" style="margin: 10px" type="text"
                                   asp-for="@Model.productDTO.ProductName" placeholder="Product Name" required="">
                        </div>


                        <!--Description-->

                        <div class="col-6">

                            <label>Description</label>
                            <textarea class="form-control" style="margin: 10px" type="text" asp-for="@Model.productDTO.Description" placeholder="Description" required=""></textarea>

                        </div>

                        <br>

                        <!--Price-->

                        <div class="col-6">

                            <label>Price</label>
                            <input class="form-control" style="margin: 10px" type="text" asp-for="@Model.productDTO.Price" placeholder="Your Name" required="">

                        </div>


                    </div>


                    <!--Image-->

                    <div class="col-6">


                        <img class="form-control" style="margin: 10px;width :50%;height:50%" type="file" id="image" name="image" >


                        <input id="UserAvatarIFromFIle" type="file" asp-for="@Model.productDTO.ImageIformFile"></>

                    </div>

                    <div class="Roles">



                        @if (Model.categories != null)
                        {


                            @foreach (var item in Model.categories)
                            {

                                <label>@item.CategoryTitle</label>
                                <input type="checkbox" value="@item.Id" name="SelectedRoles" />
                                <br></br>

                            }



                        }





                    </div>

                    <div>
                        <button class="btn btn-primary mt-2" type="submit">Edit information</button>
                    </div>

                </form>

            </div>

        </div>


    </div>

    <hr style="height: 5px; color: black;"></hr>

</body>

<script>

    const fileInput = document.getElementById('UserAvatarIFromFIle');

    const image = document.getElementById('image');

    fileInput.addEventListener('change', function () {

        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            image.src = e.target.result;
        }

        reader.readAsDataURL(file);
    });

</script>
