@using Application.Dtos.ShopDTO
@model ShopDTO?;

@{
    Layout = "_AdminLayout";
}


<head>

    <noscript>

        <style>

            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }

        </style>


    </noscript>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<style>

    .maincontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: ghostwhite;
        padding: 1px;
    }

    .inputcontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .img {
        margin: 20px;
        width: 300px;
        height: 300px;
    }

    .Roles {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .btn {
        margin: 20px;
    }


    .title {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<body>

    <hr></hr>
    <div class="title">
        <h1>ویرایش اطلاعات فروشگاه</h1>
    </div>
    <hr></hr>

    <div class="maincontainer">


        <form class="maincontainer" method="post" asp-area="AdminPanel" asp-controller="Admin" asp-action="EditShopDetails" enctype="multipart/form-data">

            <div class="row">


                <!--Address-->

                <div class="inputcontainer">

                    <label>Id</label>
                    <input readonly class="form-control" style="margin: 10px" type="text"
                           asp-for="@Model.Id" placeholder="Product Name" required="">

                </div>

                <!--Address-->

                <div class="inputcontainer">

                    <label>Address</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.Address" placeholder="Description" required=""></textarea>

                </div>


                <!--Phone-->

                <div class="inputcontainer">

                    <label>phone</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.Phone" placeholder="Description" required=""></textarea>

                </div>

                <!--Shop Name-->

                <div class="inputcontainer">

                    <label>phone</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.ShopName" placeholder="Description" required=""></textarea>

                </div>



                <!--Intro-->
                <!--IntroTitle-->

                <div class="inputcontainer">

                    <label>Intro Title</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.IntroTitle" placeholder="Description" required=""></textarea>

                </div>


                <!--IntroDescription-->

                <div class="inputcontainer">

                    <label>intro Description</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.IntroDescription" placeholder="Description" required=""></textarea>

                </div>

                <!--IntroImage-->

                <div class="inputcontainer">


                    <img class="img-fluid img" type="file" id="image" name="image">


                    <input id="UserAvatarIFromFIle" type="file" asp-for="@Model.IntroImageIformFile"></hr>

                </div>


                <br>

                <!--Why Nuts Title-->
                <div class="inputcontainer">

                    <label>Why Nuts Title</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.WhyNutsTitle" placeholder="Description" required=""></textarea>

                </div>

                <!--Why Nuts Description-->
                <div class="inputcontainer">

                    <label>Why Nuts Description </label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.WhyNutsDescription" placeholder="Description" required=""></textarea>

                </div>


                <!--Why Us Title-->
                <div class="inputcontainer">

                    <label>Why Us Title </label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.WhyUsTitle" placeholder="Description" required=""></textarea>

                </div>



                <!--Why Us Description-->
                <div class="inputcontainer">

                    <label>Why Us Description </label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.WhyUsDescription" placeholder="Description" required=""></textarea>

                </div>

                <!--Why Us Title2-->
                <div class="inputcontainer">

                    <label>Why Us Title 2 </label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.WhyUsTitle2" placeholder="Description" required=""></textarea>

                </div>


                <!--Why Us Description 2-->
                <div class="inputcontainer">

                    <label>Why Us Description 2 </label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.WhyUsDescription2" placeholder="Description" required=""></textarea>

                </div>

            </div>


            <div>
                <button class="btn" type="submit">Edit information</button>
            </div>

        </form>

    </div>

</body>

<script>

    const fileInput = document.getElementById('UserAvatarIFromFIle');

    const image = document.getElementById('image');

    fileInput.addEventListener('change', function () {

        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            image.src = e.target.result;
        }

        reader.readAsDataURL(file);
    });

</script>