@using Application.Dtos.CategoryDTO
@model CategoryDTO;

@{
    Layout = "_AdminLayout";
}




<head>

    <noscript>

        <style>

            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }

        </style>


    </noscript>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<style>

    .maincontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: ghostwhite;
        padding: 1px;
    }

    .inputcontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .img {
        margin: 20px;
        width: 300px;
        height: 300px;
    }

    .Roles {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .btn {
        margin: 20px;
    }


    .title {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<body>

    <hr></hr>
    <div class="title">
        <hr></hr>
        <h1>ویرایش دسته بندی</h1>
        <hr></hr>
    </div>
    <hr></hr>

    <div class="maincontainer">


        <form class="maincontainer" method="post" asp-area="AdminPanel" asp-controller="Admin" asp-action="EditCategory" enctype="multipart/form-data">

            <div class="row">


                <!--Id-->
                <div class="inputcontainer">
                    <label>Id</label>
                    <input readonly class="form-control" style="margin: 10px" type="text"
                           asp-for="@Model.Id" placeholder="Product Name" required="">
                </div>

                <!--Category Title-->

                <div class="col-12 inputcontainer">
                    <label class="form-label">Category Title</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.CategoryTitle" placeholder="Category Title" required=""></textarea>
                </div>




                <!--Category Unique Name-->

                <div class="col-12 inputcontainer">

                    <label class="form-label">Category Unique Name</label>
                    <textarea class="form-control" style="margin: 10px" type="text" asp-for="@Model.CategoryUniqueName" placeholder="Category Unique Name" required=""></textarea>

                </div>

                <br>



            </div>


            <!--Image-->

            <div class="col-12 inputcontainer">


                <img class="img" type="file" id="image" name="image">


                <input id="UserAvatarIFromFIle" type="file" asp-for="@Model.ImageIFormFile"></hr>

            </div>



            <div>
                <button class="btn btn-primary" type="submit">Edit information</button>
            </div>

        </form>

    </div>

    <hr style="height: 5px; color: black;"></hr>

</body>

<script>

    const fileInput = document.getElementById('UserAvatarIFromFIle');

    const image = document.getElementById('image');

    fileInput.addEventListener('change', function () {

        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            image.src = e.target.result;
        }

        reader.readAsDataURL(file);
    });

</script>