@using NutsShop_Presentation.Areas.AdminPanel.ViewModels
@model EditUserViewModel;

@{
    Layout = "_AdminLayout";
}

<head>

    <noscript>

        <style>

            [data-aos] {
                opacity: 1 !important;
                transform: translate(0) scale(1) !important;
            }

        </style>


    </noscript>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<style>

    .maincontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: ghostwhite;
        padding: 1px;
    }

    .inputcontainer {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .img {
        margin: 20px;
        width: 300px;
        height: 300px;
    }

    .Roles {
        justify-content: center;
        display: flex;
        flex-direction: column;
        margin: 10px;
        background-color: rgb(224, 224, 224);
        padding: 10px;
    }

    .btn {
        margin: 20px;
    }


    .title {
        display: flex;
        justify-content: center;
        align-items: center;
    }

</style>

<body>

    <div class="title">
        <hr></hr>
        <h1>ویرایش کاربر</h1>
        <hr></hr>
    </div>

    <div class="maincontainer">


        <form class="maincontainer" method="post" asp-area="AdminPanel" asp-controller="Admin" asp-action="EditUser" enctype="multipart/form-data">

            <div class="row">



                <!--Id-->
                <div class="inputcontainer">
                    <label>Id</label>
                    <input readonly class="form-control" style="margin: 10px" type="text"
                           asp-for="@Model.UserAdminPanelDTO.Id" placeholder="Id" required="">
                </div>



                <!--User Name-->

                <div class="col-12 inputcontainer">
                    <label class="form-label">User Name</label>
                    <textarea class="form-control" style="margin: 10px" type="text"
                              asp-for="@Model.UserAdminPanelDTO.UserName" placeholder="User Name" required=""></textarea>
                </div>


              


                <!--Phone-->

                <div class="col-12 inputcontainer">

                    <label class="form-label">Phone</label>
                    <textarea class="form-control" style="margin: 10px" type="text" asp-for="@Model.UserAdminPanelDTO.Phone" placeholder="Phone" required=""></textarea>

                </div>




                <br>

            


            </div>


            

            <div class="col-12 Roles">

                @if (Model.Roles != null)
                {
                    @foreach (var item in Model.Roles)
                    {
                        <hr></hr>
                        <label class="form-label">@item.RoleTitle</label>
                        <input type="checkbox" value="@item.Id" name="SelectedRoles" />
                        <hr></hr>

                    }
                }
            </div>

            <div>
                <button class="btn btn-primary" type="submit">Edit information</button>
            </div>

        </form>

    </div>

    <hr style="height: 5px; color: black;"></hr>

</body>

<script>

    const fileInput = document.getElementById('UserAvatarIFromFIle');

    const image = document.getElementById('image');

    fileInput.addEventListener('change', function () {

        const file = fileInput.files[0];
        const reader = new FileReader();

        reader.onload = function (e) {
            image.src = e.target.result;
        }

        reader.readAsDataURL(file);
    });

</script>