@using NutsShop_Presentation.Areas.AdminPanel.ViewModels
@model GetOrderDetailsViewModel

@{
    Layout = "_AdminLayout";
}




<html lang="fa">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جدول محصولات</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


</head>


<style>




    body {
        font-family: Arial, sans-serif;
        background-color: #f2f2f2;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        text-align: center;
        color: #333;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    th, td {
        padding: 15px;
        text-align: center;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    img {
        max-width: 100px;
        height: auto;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }



    .btn {
        height: 40px;
        width: 40%;
    }

    .Addbtn {
        margin: 30px;
        height: 40px;
        width: 40%;
    }

    .location {
        display: flex;
        flex-direction: column;
        background-color: whitesmoke;
        border-radius: 10px;
        border: 2px #333;
        margin: 20px;
        padding: 20px;
    }

</style>


<body>


    <h1> جزییات سفارش </h1>


    <div class="container">


        <table>

            <tr>

                <th></th>
                <th>نام محصول</th>
                <th>وزن</th>
                <th>مبلغ</th>

            </tr>


            @if (Model.orderDetails != null &&
            Model.OrderDTO != null)
            {

                @foreach (var item in Model.orderDetails)
                {
                    <tr>

                        <td>
                            <img src="~/Images/Products/@item.ProductImage" />
                        </td>

                        <td>@item.Producttitle</td>
                        <td>@item.Weight</td>
                        <td>@item.Price</td>

                    </tr>

                }

            }

        </table>

        <hr></hr>
        <div class="text-center">
            <h4>مجموع</h4>
            <h4>@Model.OrderDTO.Sum</h4>

        </div>
     

    </div>

    <h1>اطلاعات مشتری</h1>

    <div class="location">



        @if (Model.LocationDTO != null)
        {
            <div class="row">

                <hr></hr>
                <div class="col-12">
                    <label class="form-label">FirstName: </label>
                    <label class="form-label">@Model.LocationDTO.FirstName</label>
                </div>
                <hr></hr>

                <hr></hr>
                <div class="col-12">
                    <label class="form-label">LastName: </label>
                    <label class="form-label">@Model.LocationDTO.LastName</label>
                </div>
                <hr></hr>


                <hr></hr>
                <div class="col-12">
                    <label class="form-label">PhoneNumber: </label>
                    <label class="form-label">@Model.LocationDTO.PhoneNumber</label>
                </div>
                <hr></hr>

                <hr></hr>
                <div class="col-12">
                    <label class="form-label">state: </label>
                    <label class="form-label">@Model.LocationDTO.State</label>
                </div>
                <hr></hr>

                <hr></hr>
                <div class="col-12">
                    <label class="form-label">City: </label>
                    <label class="form-label">@Model.LocationDTO.City</label>
                </div>
                <hr></hr>

                <hr></hr>
                <div class="col-12">
                    <label class="form-label">Address: </label>
                    <label class="form-label">@Model.LocationDTO.Address</label>
                </div>
                <hr></hr>

                <hr></hr>
                <div class="col-12">
                    <label class="form-label">PostCode: </label>
                    <label class="form-label">@Model.LocationDTO.PostCode</label>
                </div>
                <hr></hr>


            </div>
        }



    </div>

</body>

</html>



