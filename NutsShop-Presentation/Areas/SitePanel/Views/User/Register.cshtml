@using Application.Dtos.UserRegisterDTO
@model UserRegisterDTO;

@{
    Layout = "_SiteLayout";
}


<html lang="ira">


<style>

    body {
        margin: 0;
        padding: 0;
        display: block;
        justify-content: center;
        align-items: center;
        height: 100%;
        background: linear-gradient(to right, #333, #494848);
    }

    .form-container {
        width: 50%;
        margin: 50px;
        background-color: #fff;
        border-radius: 25px;
        padding: 40px;
        justify-content: center;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        margin: 10px;
        width: 70%;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            font: bolder;
            margin-bottom: 15px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #494848;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #494848;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .form-group button:hover {
                transform: scale(1.1);
                font-size: 18px;
            }



    .content {
        display: flex;
        justify-content: center;
    }

    .form {
        flex-direction: column;
        display: flex;
        justify-content: center;
        align-items: center;
    }

 
  
</style>




<body>


    <div class="content">

        <div class="form-container">

            <form class="form" method="post" asp-area="SitePanel" asp-controller="User" asp-action="Register">

                <div class="form-group">

                    <label for="name">نام کاربری</label>
                    <input type="text" asp-for="UserName" placeholder="لطفا نام کاربری را وارد کنید">
                    <span style="color:red" asp-validation-for="UserName"></span>

                </div>

                <div class="form-group">

                    <label for="name">تلفن همراه</label>
                    <input type="tel" asp-for="Phone" placeholder="لطفا تلفن همراه خود را وارد کنید">
                    <span style="color:red" asp-validation-for="Phone"></span>

                </div>


                <div class="form-group">
                    <label for="password">رمز عبور</label>
                    <input type="password" asp-for="Password" placeholder="لطفا رمز عبور را وارد کنید">
                    <span style="color:red" asp-validation-for="Password"></span>

                </div>

                <div class="form-group">
                    <label for="confirm-password">تکرار رمز عبور</label>

                    <input type="password" asp-for="RePassword" placeholder="لطفا رمز عبور را دوباره وارد کنید">

                    <span style="color:red" asp-validation-for="RePassword"></span>
                </div>

                @if (TempData["Message"] != null)
                {
                    <span style="color:red">@TempData["Message"]</span>
                }

                <br></br>

                <div class="form-group">

                    <button type="submit">ثبت نام</button>
                    <br></br>

                </div>


            </form>

            <div class="form-group">

                 <a style="color:black;" asp-area="SitePanel" asp-controller="User" asp-action="LogIn">حساب کاربری دارید؟</a>

            </div>

        </div>

    </div>

</body>
</html>
