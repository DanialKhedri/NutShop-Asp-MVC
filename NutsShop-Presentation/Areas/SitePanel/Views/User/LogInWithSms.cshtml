@{
    Layout = "_SiteLayout";
}









<!DOCTYPE html>
<html lang="fa">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title> ورود </title>

</head>

<style>


    .submitbtn {
        background-color: #494848;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

</style>

<body>


    <div class="container-fluid">

        <div class="row justify-content-center m-2 p-2">

            <hr></hr>

            <h3>ورود با رمز یکبار مصرف</h3>

            <div class="col-12 col-md-6 m-5">

                <form asp-area="SitePanel" asp-controller="User" asp-action="LookUpSms" class="border-1 justify-content-center">

                    <div class="mb-3">

                        <label class="form-label">شماره موبایل</label>
                        <input class="form-control" name="PhoneNumber" type="text" placeholder="لطفا شماره موبایل را وارد کنید"></input>
                        <span style="color:red"></span>

                    </div>




                    <div class="text-center m-2 ">
                        <button class="submitbtn" type="submit">ارسال پیامک</button>
                    </div>




                </form>

                <hr />



            </div>


        </div>

    </div>



</body>

</html>