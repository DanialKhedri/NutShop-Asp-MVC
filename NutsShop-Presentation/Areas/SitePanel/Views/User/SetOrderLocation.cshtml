@using Application.Dtos.LocationDTO
@model LocationDTO;


@{
    Layout = "_SiteLayout";
}


<html lang="en">


<style>


    .MainContainer {
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;
    }


    a {
        font-family: Arial, sans-serif;
        text-decoration: none;
        color: inherit;
        text-decoration: none;
        cursor: pointer;
        color: #494848;
        font-weight: bold;
    }

        a : :hover {
            transform: scale(1.1);
        }

    body {
        margin: 0;
        padding: 0;
        display: block;
        align-items: center;
        align-content: center;
        height: 100%;
        background: linear-gradient(to right, #333, #494848);
    }

    .form-container {
        display: flex;
        justify-content: center;
        align-content: center;
        align-items: center;
        width: 50%;
        margin: 50px;
        background-color: #fff;
        border-radius: 25px;
        padding: 40px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .form-group {
        width:80%;
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #494848;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #494848;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .form-group button:hover {
                transform: scale(1.1);
                font-size: 18px;
            }



    form {
        width: 80%;
    }

</style>


<body>


    <div class="MainContainer">
        <div class="form-container">

            <form method="post" asp-area="SitePanel" asp-controller="User" asp-action="Register">

                <div class="form-group">

                    <label for="name">First Name</label>
                    <input type="text" asp-for="FirstName" placeholder="Please Enter UserName">
                    <span style="color:red" asp-validation-for="FirstName"></span>

                </div>

                <div class="form-group">

                    <label for="name">LastName</label>
                    <input type="tel" asp-for="LastName" placeholder="Please Enter LastName">
                    <span style="color:red" asp-validation-for="LastName"></span>

                </div>

             


                <div class="form-group">

                    <label for="">Password</label>
                    <input type="text" asp-for="State" placeholder="Please Enter state">
                    <span style="color:red" asp-validation-for="State"></span>

                </div>

                <div class="form-group">
                    <label for="confirm-password">City</label>

                    <input type="text" asp-for="City" placeholder="Please Enter City">

                    <span style="color:red" asp-validation-for="City"></span>
                </div>


                <div class="form-group">
                    <label for="confirm-password">Address</label>

                    <input type="text" asp-for="Address" placeholder="Please Enter Address">

                    <span style="color:red" asp-validation-for="Address"></span>
                </div>



                <div class="form-group">
                    <label for="confirm-password">Phone Number</label>

                    <input type="text" asp-for="PhoneNumber" placeholder="Please Enter Phone Numbers">

                    <span style="color:red" asp-validation-for="PhoneNumber"></span>
                </div>




                <div class="form-group">
                    <label for="confirm-password">PostCode</label>

                    <input type="text" asp-for="PostCode" placeholder="Please Enter City">

                    <span style="color:red" asp-validation-for="PostCode"></span>
                </div>

            
                <br></br>

                <div class="form-group">
                    <button type="submit">پرداخت</button>
                    <br></br>
                   
                </div>

            </form>
        </div>

    </div>

</body>
</html>
