@using Application.Dtos.OrderDetailDTO
@model List<OrderDetailDTO>;

<html lang="en">


<style>

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .container {
        max-width: 800px;
        margin: 20px auto;
        padding: 0 20px;
    }

    .product-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .product-item {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .product-item img {
            width: 100%;
            height: auto;
            display: block;
        }

    .product-details {
        padding: 20px;
    }

        .product-details h2 {
            margin-top: 0;
        }

        .product-details p {
            margin-bottom: 10px;
        }

        .product-details button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .product-details button:hover {
                background-color: #45a049;
            }

</style>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>سبد خرید</title>
    <link rel="stylesheet" href="styles.css">
</head>



<body>
    <div class="container">

        <h1>سبد خرید</h1>

        <div class="product-list">
            

            @if (Model != null)
            {

                @foreach (var item in Model)
                {
                    <div class="product-item">

                        <img src="~/Images/Products/@item.ProductImage" alt="محصول 1">

                        <div class="product-details">

                            <h2>@item.Producttitle</h2>
                            <p>@item.Price</p>
                            <button>...</button>

                        </div>

                    </div>
                }

            }

            else
            {
                <h1>No Order</h1>
            }
            

           
            <!-- ادامه محصولات -->
        </div>

    </div>
</body>

</html>