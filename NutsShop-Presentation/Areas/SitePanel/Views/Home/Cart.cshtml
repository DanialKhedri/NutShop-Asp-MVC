@using NutsShop_Presentation.Areas.SitePanel.ViewModels
@model CartViewModel;


@{
    Layout = "_SiteLayout";
}


<html lang="en">


<style>

    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    .container {
        display: flex;
        justify-content: center;
        max-width: 800px;
        margin: 20px auto;
        padding: 0 20px;
        flex-direction: column;
        align-items: center;
    }

    .product-list {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .product-item {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .product-item img {
            width: 100%;
            height: auto;
            display: block;
        }

    .product-details {
        padding: 20px;
    }

        .product-details h2 {
            margin-top: 0;
        }

        .product-details p {
            margin-bottom: 10px;
        }

        .product-details button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .product-details button:hover {
                background-color: #45a049;
            }

    .product-list button {
        background-color: red;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }



    th, td {
        font-size: larger;
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    .timage {
        width: 150px;
        height: 150px;
    }

    .Continuebtn {
        width: 60%;
        height: 50px;
        background-color: dodgerblue;
    }
</style>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>سبد خرید</title>
    <link rel="stylesheet" href="styles.css">
</head>



<body>
    <div class="container">

        <h1>سبد خرید</h1>

        <div class="product-list">


            @if (Model.OrderDetailDTOs.Count != 0)
            {

                <table>

                    <tr>

                        <th></th>
                        <th>محصول</th>
                        <th>قیمت</th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.OrderDetailDTOs)
                    {




                        <tr>
                            <td>
                                <img class="timage" src="~/Images/Products/@item.ProductImage" alt="محصول 1">

                            </td>

                            <td> @item.Producttitle</td>


                            <td>@item.Price</td>

                            <td>
                                <button>
                                    <a asp-area="SitePanel" asp-controller="User" asp-action="RemoveOrderDetail"
                                       asp-route-Id="@item.Id">Remove</a>
                                </button>
                            </td>
                        </tr>



                    }

                </table>


                <div>
                    <h1>
                        @Model.OrderDTO.Sum;
                    </h1>
                </div>

                <button class="Continuebtn"><a>ادامه</a></button>

            }

            else
            {
                <h1>No Order</h1>
            }



            <!-- ادامه محصولات -->
        </div>

    </div>
</body>

</html>