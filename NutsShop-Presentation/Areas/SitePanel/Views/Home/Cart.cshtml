@using NutsShop_Presentation.Areas.SitePanel.ViewModels
@model CartViewModel;


@{
    Layout = "_SiteLayout";
}

<style>
    .paybtn {
        background-color: #333;
        color: #fff;
        padding: 8px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .paybtn:hover {
            background-color: #555;
        }
</style>


<body>

    <div class="container-fluid">

        <h2 class="my-4 text-center">سبد خرید</h2>
        <hr></hr>


        @if (Model.OrderDetailDTOs != null && Model.OrderDTO != null)
        {
            <div class="row bg-light">

                <div class="col-md-8 offset-md-2">

                    @foreach (var item in Model.OrderDetailDTOs)
                    {
                        <div class="card mt-3">
                            <div class="card-body">

                                <button id="myInput" class="btn btn-danger btn-sm float-end" data-bs-toggle="modal" data-bs-target="#exampleModal">X</button>

                                <div class="row">
                                    <div class="col-md-8">
                                        <h5 class="card-title">@item.Producttitle</h5>
                                        <hr />
                                        <p class="card-text">مبلغ:</p>
                                        <p class="card-text">@item.Price</p>
                                        <hr />
                                        <p class="card-text">وزن:</p>
                                        <p class="card-text">@item.Weight</p>
                                        <hr />
                                    </div>

                                    <div class="col-md-4">
                                        <img src="~/Images/Products//@item.ProductImage" class="img-fluid" alt="محصول 1">
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">آیا میخواهید این محصول را از سبدخرید خود حذف کنید؟</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        ...
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">بستن</button>
                                        <a asp-area="SitePanel" asp-controller="User" asp-action="RemoveOrderDetail" asp-route-Id="@item.Id"> <button type="button" class="btn btn-danger">حذف</button></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }




                </div>
            </div>

            <hr></hr>
            <div class="row mt-4">
                <div class="col-md-8 offset-md-2">
                    <div class="text-center">
                        <h4>
                            مجموع کل: <h4>
                                @Model.OrderDTO.Sum تومان
                                <hr></hr>
                                <button class="paybtn btn  mt-3">پرداخت</button>
                                <br></br>  <br></br>  <br></br>
                    </div>
                </div>
            </div>

        }






        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>











        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous">

            const myModal = document.getElementById('myModal')
            const myInput = document.getElementById('myInput')

            myModal.addEventListener('shown.bs.modal', () => {
              myInput.focus()
            })
        </script>
</body>
