@using NutsShop_Presentation.Areas.SitePanel.ViewModels
@model ShowProductsViewModel;

@{
    Layout = "_SiteLayout";
}





<style>

    body {
        margin: 0;
    }

    a {
        font-family: Arial, sans-serif;
        text-decoration: none;
        color: inherit;
        text-decoration: none;
        cursor: pointer;
        color: floralwhite;
        font-weight: bold;
    }


    .products {
        background-color: #555;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
    }

    .product {
        width: 15%;
        height: 25%;
        margin: 15px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        text-align: center;
    }

        .product img {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .product h3 {
            margin-bottom: 10px;
        }

        .product p {
            margin-bottom: 10px;
        }

        .product span {
            display: block;
            margin-bottom: 10px;
        }

        .product button {
            background-color: #333;
            color: #fff;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .product button:hover {
                background-color: #555;
            }

    .searchdiv {
        margin: 15px;
        display:flex;
        justify-content: center;
    }

    .searchbar
    {
        height: 35px;
        margin-right: 15px;
    }

</style>


<body>



    <div class="searchdiv">

        <input class="searchbar" type="text" id="searchInput" placeholder="جستجوی محصول موردنظر">

    </div>

    <div id="productList" class="products">


        @foreach (var item in Model.ProductsDTOs)
        {

            <div class="product">

                <img src="~/Images/Products/@item.Image" alt="Product 1">
                <h3>@item.ProductName</h3>
                <span>@item.Price</span>
                <a asp-area="SitePanel" asp-controller="Home" asp-action="ShowProduct" asp-route-Id="@item.Id"><button>خرید</button></a>

            </div>

        }



    </div>

</body>


<script>

    document.getElementById("searchInput").addEventListener("keyup", function () {
        var input, filter, divs, labels, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        divs = document.getElementById("productList").getElementsByClassName("product");

        for (var i = 0; i < divs.length; i++) {
            labels = divs[i].querySelector("h3");
            txtValue = labels.textContent || labels.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                divs[i].style.display = "";
            } else {
                divs[i].style.display = "none";
            }
        }
    });

</script>

