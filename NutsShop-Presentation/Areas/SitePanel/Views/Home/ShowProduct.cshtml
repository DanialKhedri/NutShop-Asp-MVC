@using Application.Dtos.ProductDTO
@model ProductDTO;

@{
    Layout = "_SiteLayout";
}

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" integrity="sha384-dpuaG1suU0eT09tx5plTaGMLBsfDLzUCCUXOY2j/LSvXYuG6Bqs43ALlhIqAJVRb" crossorigin="anonymous">
    <title>آجیل دانیال/نمایش محصول</title>
</head>


<style>

    body {
        padding-top: 70px;
        background-color: #555;
    }


    a {
        font-family: Arial, sans-serif;
        text-decoration: none;
        color: inherit;
        text-decoration: none;
        cursor: pointer;
        font-weight: bold;
    }





    .products {
        background-color: #555;
    }

    .product {
        margin: 20px;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        text-align: center;
    }

        .product img {
            width: 100%;
            border-radius: 10px;
            margin-bottom: 15px;
        }

        .product h3 {
            margin-bottom: 10px;
        }

        .product p {
            margin-bottom: 10px;
        }

        .product span {
            display: block;
            margin-bottom: 10px;
        }

        .product button {
            background-color: #333;
            color: #fff;
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .product button:hover {
                background-color: #555;
            }

    img {
        margin: 10px;
        border-radius: 5px;
        transition: transform 0.3s ease;
    }

        img:hover {
            transform: scale(1.05);
        }

    select {
        margin: 20px;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 5px;
    }
</style>

<body dir="rtl">

    <div class="container-fluid">

        <div class="row justify-content-center">

            <div class="col-6 product">

                <form asp-area="SitePanel" asp-controller="User"
                      asp-action="AddProductToCart" asp-route-ProductId="@Model.Id" asp-route-Weight="Weight">


                    <img src="~/Images/Products/@Model.Image" alt="Product 1">
                    <h3>@Model.ProductName</h3>
                    <hr></hr>
                    <label>@Model.Price</label>
                    <hr></hr>
                    <p>@Model.Description</p>

                    <hr></hr>
                    <select name="Weight">

                        <option value="250">250 گرم</option>
                        <option value="500">500 گرم</option>
                        <option value="1000">1 کیلو گرم</option>
                        <option value="1500">1500 گرم</option>
                        <option value="2000">2 کیلو گرم</option>

                    </select>

                    <br></br>

                    <button type="submit">اضاقه کردن به سبد خرید</button>
                </form>

            </div>
        </div>

    </div>

    <div class="container-fluid bg-light">

        <div class="row m-5">
            <hr></hr>
            <div>
                <h3>محصولات مشابه</h3>
            </div>
            <hr></hr>
        </div>

        <div class="row justify-content-center products p-3">

            <div class="col-12 col-md-3  product m-5">
                <img src="~/Images/Products/pesteh.jpg" alt="Product 1">
                <h3>badom sangi</h3>
                <p> محصول۱</p>
                <p> محصول۱</p>
                <span>820000</span>
                <a href="/SitePanel/Home/ShowProduct/3">   <button>خرید</button></a>
            </div>

        </div>


    </div>


</body>
</html>
