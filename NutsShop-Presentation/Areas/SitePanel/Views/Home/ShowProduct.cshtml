@using Application.Dtos.ProductDTO
@model ProductIndexDTO;

@{
    Layout = "_SiteLayout";
}

<!DOCTYPE html>
<html lang="fa">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>صفحه محصول</title>

    <style>
        body {
            width: 100%;
            font-family: Arial, sans-serif;
            text-align: center;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 60%;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            max-width: 600px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
        }

        img {
            width: 60%;
            height: 50%;
            margin: 10px;
            border-radius: 5px;
            transition: transform 0.3s ease;
        }

            img:hover {
                transform: scale(1.05);
            }

        h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 10px;
        }

        p {
            color: #666;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .buy-button {
            margin: 20px;
            padding: 10px 20px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            text-decoration: none;
            transition: background-color 0.3s ease;
            width: 50%;
            font-weight: bold;
        }

            .buy-button:hover {
                background-color: #45a049;
            }

        hr {
            border: none;
            border-top: 1px solid #ccc;
            margin: 20px 0;
        }

        select {
            margin: 20px;
            padding: 10px 20px;
            font-weight: bold;
            border-radius: 5px;
        }


        .pricecontainer {
            display: flex;
            flex-direction: row;
            justify-content: center;
            align-content: center;
            align-items: center;
        }
    </style>
</head>

<body>

    <div class="container">

        <form asp-area="SitePanel" asp-controller="User" 
        asp-action="AddProductToCart" asp-route-ProductId="@Model.Id" asp-route-Weight="Weight">

            <img src="~/Images/Products/@Model.Image" alt="تصویر محصول"></img>

            <div>
                <h2>@Model.ProductName</h2>
            </div>

            <hr></hr>

            <div>

                <p>@Model.Description</p>

            </div>

            <div class="pricecontainer">

                <h1 style="margin:10px;">تومان</h1>
                <h1>@Model.Price</h1>

            </div>

            <hr></hr>



            <div>

                <select name="Weight">

                    <option value="250">250 G</option>
                    <option value="500">500 G</option>
                    <option value="1000">1 KG</option>
                    <option value="1500">1500 G</option>
                    <option value="2000">2 KG</option>

                </select>

                <button class="buy-button">افزودن به سبد خرید</button>

            </div>


            <hr>


        </form>

    </div>

    <div class="container">

        <p>نامریک: اینجا نامریک محصول ویا اطلاعات دیگر می‌تواند قرار بگیرد.</p>

    </div>




</body>
</html>
